{
	"logging": {
		"logs": {
			"default": {
				"writer": {
					"output": "stdout"
				},
				"level": "DEBUG"
			}
		}
	},
	"apps": {
		"http": {
			"servers": {
				"srv0": {
					"listen": [
						"localhost:443",
					],
					"routes": [
						{
							"match": [
								{
									"host": [
										"a.com"
									]
								}
							],
							"handle": [
								{
									"handler": "subroute",
									"routes": [
										{
											"handle": [
												{
													"handler": "file_server",
													"hide": [
														"test/config-caddy"
													],
													"root": "/sites/a.com/"
												}
											]
										}
									]
								}
							],
							"terminal": true
						},
						{
							"match": [
								{
									"host": [
										"b.com"
									]
								}
							],
							"handle": [
								{
									"handler": "subroute",
									"routes": [
										{
											"handle": [
												{
													"handler": "file_server",
													"hide": [
														"test/config-caddy"
													],
													"root": "/sites/b.com/"
												}
											]
										}
									]
								}
							],
							"terminal": true
						},
						{
							"match": [
								{
									"host": [
										"c.com"
									]
								}
							],
							"handle": [
								{
									"handler": "subroute",
									"routes": [
										{
											"handle": [
												{
													"handler": "file_server",
													"hide": [
														"test/config-caddy"
													],
													"root": "/sites/c.com/"
												}
											]
										}
									]
								}
							],
							"terminal": true
						}
					],
					"tls_connection_policies": [
						{
							"match": {
								"sni": [
									"a.com"
								]
							},
							"certificate_selection": {
								"any_tag": [
									"cert0"
								]
							}
						},
						{
							"match": {
								"sni": [
									"b.com"
								]
							},
							"certificate_selection": {
								"any_tag": [
									"cert1"
								]
							}
						},
						{
							"match": {
								"sni": [
									"c.com"
								]
							},
							"certificate_selection": {
								"any_tag": [
									"cert2"
								]
							}
						},
						{}
					],
					"strict_sni_host": false
				}
			}
		},
		"tls": {
			"certificates": {
				"load_files": [
					{
						"certificate": "/certs/a.com.crt",
						"key": "/certs/a.com.key",
						"tags": [
							"cert0"
						]
					},
					{
						"certificate": "/certs/b.com.crt",
						"key": "/certs/b.com.key",
						"tags": [
							"cert1"
						]
					},
					{
						"certificate": "/certs/c.com.crt",
						"key": "/certs/c.com.key",
						"tags": [
							"cert2"
						]
					}
				]
			},
			"automation": {
				"policies": [
					{
						"disable_ocsp_stapling": true
					}
				]
			},
			"disable_ocsp_stapling": true
		}
	}
}
